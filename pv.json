{
 "apiVersion": "v1",
 "kind": "PersistentVolume",
 "metadata": {
 "name": "pv001"
},
"spec": {
   "capacity": {
   "storage": "400Mi"
   },
   "accessModes": [ "ReadWriteMany" ],
   "nfs": {
      "path": "/mnt/persistent-volumes/pv001",
      "server": "10.255.10.160"
   },
   "persistentVolumeReclaimPolicy": "Recycle"
   }
}
